// todo: think about extends airbnb vs prettier

{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": ["airbnb", "prettier"],
  "plugins": ["import", "jsx-a11y"],
  "rules": {
    "strict": 0,
    "no-underscore-dangle": [2, { "allowAfterThis": true }],
    "arrow-body-style": ["error", "as-needed"],
    "no-param-reassign": ["error", { "props": false }]
  }
}
